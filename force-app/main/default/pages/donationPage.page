<apex:page standardController="Contact" extensions="donationController">
    <style>
        .container {
            height: 100vh;
            overflow-y: auto;
            padding: 20px;
            font-family: Arial, Helvetica, sans-serif;
        }
        .div-donation {
            display: flex;
            align-items: center;
            margin-top: 10px;
            margin-left: 30px;
            margin-right: 10px;
            width: 95%;
            border-radius: 10px;
            height: 80px;
            background-color: rgba(245, 241, 241, 0.844);
            padding: 10px;
            box-shadow: 0 4px 8px;
        }
        .img-logo {
            width: 100px;
            height: 75px;
            margin-right: 20px;
        }
        .div-donation h2 {
            margin: 0;
            font-size: 20px;
        }
        hr {
            border: 1px solid rgb(75, 229, 250);
        }
        .donation-info {
            margin-top: 20px;
            padding: 20px;
            padding-top: 10px;
        }
        .donation-item {
            display: flex;
            flex-wrap: wrap;
        }
        .donation-item .slds-form-element {
            width: 100%;
            margin-bottom: 20px;
            padding: 10px;
        }
        .donation-item .slds-form-element__label {
            font-size: 15px;
        }
        .donation-item .slds-form-element__static {
            padding-top: 21px;
            font-size: 15px;
        }
        .donation-item .slds-form-element:not(:last-child) {
            margin-bottom: 20px;
        }
        .donation-info h2 {
            padding-left: 10px;
            font-size: 24px;
        }
        h2 {
            font-size: 20px;
            font-weight: normal;
        }
        .required {
            color: red;
            padding: 5px;
        }
        .select-container {
            width: 100%;
            padding-top: 10px;
        }
        .select-container .slds-form-element__label {
            font-size: 13px;
        }
        .select-container select {
            width: 20%;
            padding-top: 30px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 3px;
            box-sizing: border-box;
            font-size: 13px;
            background-color: #f8f8f8;
        }
    </style>

    <div class="container">
        <div class="div-donation">
            <img src="{!URLFOR($Resource.Donation_Logo)}" class="img-logo" alt="Company Logo" />
            <h2>Donation</h2>
        </div>
        <div class="donation-info">
            <h2>Donation Information</h2>
            <hr />
            <div class="donation-item">
                <div class="slds-grid slds-gutters">
                    <div class="slds-col slds-size_1-of-1">
                        <div class="slds-form-element">
                            <label class="slds-form-element__label">Donor Name</label>
                            <div class="slds-form-element__control">
                                <span class="slds-form-element__static">
                                    {!DonorName}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="slds-grid slds-gutters">
                    <div class="slds-col slds-size_1-of-1">
                        <div class="slds-form-element">
                            <label class="slds-form-element__label">Email</label>
                            <div class="slds-form-element__control">
                                <span class="slds-form-element__static">
                                    {!Email}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="slds-grid slds-gutters">
                    <div class="slds-col slds-size_1-of-1">
                        <div class="slds-form-element">
                            <label class="slds-form-element__label">Phone</label>
                            <div class="slds-form-element__control">
                                <span class="slds-form-element__static">
                                    {!Phone}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="donation-info">
            <h2>Campaign</h2>
            <hr />
            <div class="select-container">
                <div class="slds-form-element">
                    <label class="slds-form-element__label">Select donation type: <span class="required">*</span></label>
                    <div class="slds-form-element__control">
                        <apex:form id="frm">
                            <apex:selectList id="pl1" value="{!selectedCampaign}" size="1" onchange="showSecondPicklist()">
                                <apex:selectOptions value="{!campaignOptions}"  />
                            </apex:selectList>
                        </apex:form>
                    </div>
                </div>
            </div>

            <div class="select-container">
                <div id="div1" class="slds-form-element"  style="display:none">
                    <label class="slds-form-element__label">Donation To: <span class="required">*</span></label>
                    <div class="slds-form-element__control">
                        <apex:form>
                            <apex:selectList value="{!selectedCampaign}" size="1" >
                                <apex:selectOptions value="{!campaignOptions}" />
                            </apex:selectList>
                        </apex:form>
                    </div>
                </div>
            </div>
       

        </div>

    </div>
    <script>

function showSecondPicklist() {
            var donationtypeValye = document.getElementById('{!$Component.frm.pl1}').value;
            console.log('::donationtypeValye '+donationtypeValye);
            
            var secondPicklist = document.getElementById('div1');

            if(donationtypeValye == 'Choose a Donation Type'){
                secondPicklist.style.display = 'none';

            }else{
                secondPicklist.style.display = 'block';

            }
        }


    </script>
</apex:page>
